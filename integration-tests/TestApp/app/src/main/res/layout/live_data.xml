<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.arch.lifecycle.LiveData" />

        <variable
            name="liveData"
            type="LiveData&lt;String&gt;" />

        <variable
            name="liveDataObject"
            type="android.databinding.testapp.vo.LiveDataObject" />

        <variable
            name="liveDataContainer"
            type="android.databinding.testapp.vo.LiveDataContainer" />

        <variable
            name="bValue"
            type="android.databinding.ObservableBoolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{liveDataObject}" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{liveDataContainer.liveData}" />

        <EditText
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@={liveDataObject}" />

        <EditText
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@={liveDataContainer.liveData}" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{liveData}" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`` + bValue}" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{liveDataContainer.getValue(liveDataContainer.contained.liveData)}" />
    </LinearLayout>
</layout>